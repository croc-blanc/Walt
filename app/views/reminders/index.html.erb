<% @reminders.each do |reminder| %>
        <ul>
          <li><%=reminder.content%></li>
          <li><%=reminder.date%></li>
          <li><%=reminder.time%></li>
          <li><%=reminder.recurrence%></li>
        </ul>
              <%= link_to edit_reminder_path(reminder) do %>
              <i class="fa fa-edit">edit</i>
              <% end %>
              <%= link_to reminder_path(reminder), method: :delete do %>
              <i class="fa fa-close"></i>
              <% end %>
       <%end%>
